@using ChimieProject.Models.BLL
@using ChimieProject.Models.Entities
@{

    Layout = "_Admin";


}

@model IEnumerable<ChimieProject.Models.Entities.EchangeLot>

<br />
@*--[Call Partial view Notification]--*@
<partial name="_Notification">
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">EchangeLot List</h2>
    </div>
    <div class="col-4 text-end">
        <a asp-controller="EchangeLot" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &nbsp; Ajouter EchangeLot
        </a>
    </div>
    <div class="col-10 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nom Laboratoire</th>
                    <th>Nom Produit</th>
                    <th>Type Echange</th>
                    <th>DatePublication</th>
                    <th>Purete</th>
                    <th>Concentration</th>
                    <th>DatePeremption</th>
                    <th>Quantite </th>
                    <th>UniteQuantite</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    {
                        Structure LaboObject = BLL_Structure.Get(obj.IdLabo);
                        Produit prodObject = BLL_Produit.Get(obj.IdProduit);
                  
                  
                    <tr>
                   
                        <td width="30%">
                            @LaboObject.Nom
                        </td>
                        <td width="30%">
                                @prodObject.Nom
                        </td>
                         <td width="30%">
                          @obj.Type
                        </td>
                     
                        <td width="30%">
                          @obj.DatePublication
                        </td>
                        <td width="30%">
                          @obj.Purete
                        </td>
                        <td width="30%">
                            @obj.Concentration
                        </td>
                        <td width="30%">
                            @obj.DatePeremption
                        </td>
                        <td width="30%">
                            @obj.Quantite
                        </td>
                        <td width="30%">
                            @obj.UniteQuantite
                        </td>
                        <td>
                            <div class="w-50 btn-group" role="group">
                                        <a asp-controller="EchangeLot" asp-action="Edit" asp-route-id="@obj.Id"
                                   class="btn btn-primary mx-2"> <i class="fa-solid fa-pen-to-square"></i> Edit</a>
                                <a  onclick="return Delete(@(obj.Id))"
                                   class="btn btn-danger mx-2">
                                            <i class="fa-solid fa-trash-can"></i>
                                   Delete</a>
                            </div>
                        </td>
                    </tr>
                    }
                }
            </tbody>
        </table>
        @*pagination Processuce en cour de traitement ..........*@
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
 @section Scripts{
   @{

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
     <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

   }

        <script type="text/javascript">

            function Delete(id) {
                Swal.fire({
                    title: 'êtes vous sûr?',
                    text: "Vous ne pourrez pas revenir en arrière!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Oui, Supprimer le!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "DELETE",
                            url: "/EchangeLot/Delete/",
                            data: { id: id },
                            success: function (data) {
                                if (data.success) {
                                   
                                    location.reload();
                                }
                                else {
                                    toastr.success(data.message);
                                }
                            }
                        });

                    }
                })
            }
         </script>
 }

